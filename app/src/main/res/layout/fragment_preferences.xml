<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/preferencesViewgroupContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_dark_green_to_light_green"
    android:orientation="vertical"
    android:paddingBottom="34dp"
    android:paddingLeft="34dp"
    android:paddingRight="34dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/petrolStationBrandsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Petrol Station Brands:"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white" />

        <View style="@style/Divider" />

        <CheckBox
            android:id="@+id/shellCheckbox"
            style="@style/WhiteCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shell" />

        <CheckBox
            android:id="@+id/petronasCheckbox"
            style="@style/WhiteCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Petronas" />

        <CheckBox
            android:id="@+id/bhpetrolCheckbox"
            style="@style/WhiteCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BHPetrol" />

        <CheckBox
            android:id="@+id/caltexCheckbox"
            style="@style/WhiteCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caltex" />

        <CheckBox
            android:id="@+id/petronCheckbox"
            style="@style/WhiteCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Petron" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/petrolTypeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Petrol Type:"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white" />

        <View style="@style/Divider" />

        <RadioGroup
            android:id="@+id/petrolTypeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:paddingLeft="4dp"
            android:paddingTop="4dp">

            <RadioButton
                android:id="@+id/ron95RadioButton"
                style="@style/WhiteRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RON 95" />

            <RadioButton
                android:id="@+id/ron97RadioButton"
                style="@style/WhiteRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ron 97" />

            <RadioButton
                android:id="@+id/dieselRadioButton"
                style="@style/WhiteRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diesel" />

            <RadioButton
                android:id="@+id/euro5RadioButton"
                style="@style/WhiteRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diesel EURO5" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <Button
            android:id="@+id/saveButton"
            style="@style/RoundedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVE" />
    </LinearLayout>

</LinearLayout>