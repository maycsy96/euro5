<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/preferencesViewgroupContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:padding="12dp"
            android:text="Please select your preferred petrol station brand and petrol type:"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/petrolStationBrandsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            android:padding="12dp"
            android:text="Petrol Station Brands:"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black" />

        <CheckBox
            android:id="@+id/shellCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shell" />

        <CheckBox
            android:id="@+id/petronasCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Petronas" />

        <CheckBox
            android:id="@+id/bhpetrolCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BHPetrol" />

        <CheckBox
            android:id="@+id/caltexCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caltex" />

        <TextView
            android:id="@+id/petrolTypeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            android:padding="12dp"
            android:text="Petrol Type:"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black" />

        <RadioGroup
            android:id="@+id/petrolTypeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingTop="4dp">

            <RadioButton
                android:id="@+id/ron95RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RON 95" />

            <RadioButton
                android:id="@+id/ron97RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ron 97" />

            <RadioButton
                android:id="@+id/dieselRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diesel" />

            <RadioButton
                android:id="@+id/euro5RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diesel EURO5" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_green_light"
            android:text="SAVE" />
    </LinearLayout>

</LinearLayout>